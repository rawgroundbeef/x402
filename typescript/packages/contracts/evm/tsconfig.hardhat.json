{
  "ts-node": {
    "swc": true
  },
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./dist-hardhat",
    "rootDir": "./",
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false
  },
  "include": [
    "./scripts",
    "./test",
    "./dist-hardhat/typechain-types",
    "./types",
    "./hardhat.config.ts"
  ]
}

